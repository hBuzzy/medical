    <Window.Resources>
        <Style TargetType="CheckBox" x:Key="checkBoxBold">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Border x:Name="gridBox" CornerRadius="3">
                            <Border x:Name="imageIcon" CornerRadius="3"> 
                                <materialDesign:PackIcon Kind="FormatBold" Foreground="Teal" Width="30" Height="30" Margin="0,1,0,0"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="gridBox" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.1" Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="imageIcon" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.2" Color="Teal"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="gridBox" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.1" Color="Transparent"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="imageIcon" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.2" Color="Transparent"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
